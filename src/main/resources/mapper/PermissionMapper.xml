<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rbac.mapper.PermissionMapper">
    <insert id="insert" parameterType="com.example.rbac.dto.PermissionDTO" useGeneratedKeys="true" keyProperty="id">
        insert into sys_permission
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="parentId != null">parent_id,</if>
            <if test="name != null">name,</if>
            <if test="type != null">type,</if>
            <if test="permissionCode != null">permission_code,</if>
            <if test="path != null">path,</if>
            <if test="component != null">component,</if>
            <if test="icon != null">icon,</if>
            <if test="sort != null">sort,</if>
            <if test="status != null">status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="parentId != null">#{parentId},</if>
            <if test="name != null">#{name},</if>
            <if test="type != null">#{type},</if>
            <if test="permissionCode != null">#{permissionCode},</if>
            <if test="path != null">#{path},</if>
            <if test="component != null">#{component},</if>
            <if test="icon != null">#{icon},</if>
            <if test="sort != null">#{sort},</if>
            <if test="status != null">#{status},</if>
        </trim>
    </insert>
    <update id="update" parameterType="com.example.rbac.dto.PermissionQueryDTO">
        update sys_permission
        <set>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="type != null">type = #{type},</if>
            <if test="permissionCode != null">permission_code = #{permissionCode},</if>
            <if test="path != null">path = #{path},</if>
            <if test="component != null">component = #{component},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="Long">
        delete from sys_permission where id = #{id}
    </delete>

    <select id="selectAll" parameterType="com.example.rbac.dto.PermissionQueryDTO" resultType="com.example.rbac.entity.Permission">
        SELECT * FROM sys_permission
        <where>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        order by sort
    </select>

    <select id="selectById" parameterType="Long" resultType="com.example.rbac.entity.Permission">
        select * from sys_permission where id = #{id}
    </select>

    <select id="selectRolesByUserId" parameterType="Long" resultType="com.example.rbac.entity.Permission">
        SELECT r.* FROM sys_permission r
        LEFT JOIN sys_user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>

    <select id="selectRoleIdsByUserId" parameterType="Long" resultType="Long">
        SELECT role_id FROM sys_user_role WHERE user_id = #{userId}
    </select>
</mapper>
